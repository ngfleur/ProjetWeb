{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ contact.id }}</td>
			</tr>
			<tr>
				<th>NumTel</th>
				<td>{{ contact.numTel }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ contact.nom }}</td>
			</tr>
			<tr>
				<th>Prenom</th>
				<td>{{ contact.prenom }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ contact.email }}</td>
			</tr>
		</tbody>
	</table>
	<div class="d-flex flex-row">
		<div class="demo-inline-spacing mt-4 mx-5 d-flex gap-5">
			<a href="{{ path('app_contact_edit', {'id': contact.id}) }}" class="btn rounded-pill btn-primary">edit</a>
			<a href="{{ path('app_contact_index') }}" class="btn rounded-pill btn-outline-primary">back to list</a>
			<button class="btn rounded-pill btn-outline-primary" form="app_contact_delete_{{contact.id}}">Delete</button>
		</div>
	</div>


	{{ include('contact/_delete_form.html.twig') }}
{% endblock %}
