{% extends 'base.html.twig' %}
{% block title %}
	Contacts
{% endblock %}
{% block title_btn %}
	<div class="demo-inline-spacing">
		<a href="{{ path('app_contact_new') }}" class="btn rounded-pill btn-primary">Ajouter</a>
	</div>
{% endblock %}
{% block body %}

	<!-- Basic Bootstrap Table -->

	{% for key, value in app.flashes('success') %}
		<div class="alert alert-primary alert-dismissible ">
			{{ value }}
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	{% endfor %}
	<div class="card">
		<div class="table-responsive text-nowrap">
			<table class="table">
				<thead>
					<tr>
						<th>Id</th>
						<th>NumTel</th>
						<th>Nom</th>
						<th>Prenom</th>
						<th>Email</th>
						<th>actions</th>
					</tr>
				</thead>
			</tr>
		</thead>
		<tbody class="table-border-bottom-0">

			{% for contact in contacts %}
				<tr>
					<td>{{ contact.id }}</td>
					<td>{{ contact.numTel }}</td>
					<td>{{ contact.nom }}</td>
					<td>{{ contact.prenom }}</td>
					<td>{{ contact.email }}</td>
					<td>
						<div class="dropdown">
							<button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
								<i class="bx bx-dots-vertical-rounded"></i>
							</button>
							<div class="dropdown-menu">
								<a class="dropdown-item" href="{{ path('app_contact_show', {'id': contact.id}) }}">
									<i class="bx bx-show-alt me-1"></i>
									Show</a>
								<a class="dropdown-item" href="{{ path('app_contact_edit', {'id': contact.id}) }}">
									<i class="bx bx-edit-alt me-1"></i>
									Edit</a>
								<button class="dropdown-item" type="submit" form="app_contact_delete_{{contact.id}}">
									<i class="bx bx-trash me-1"></i>
									Delete</button>
								{{ include('contact/_delete_form.html.twig') }}
							</div>
						</div>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}

		</tbody>
		<!--/ Basic Bootstrap Table -->
	{% endblock %}
