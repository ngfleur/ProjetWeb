{{ form_start(form) }}
{% for key, value in app.flashes('error') %}
	<div class="alert alert-warning alert-dismissible col-6">
		{{ value }}
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
{% endfor %}

{{ form_widget(form, {'attr': {'class': 'col-6'}}) }}
<div class="demo-inline-spacing mt-4 mx-5 d-flex gap-5">
	<button class="btn rounded-pill btn-primary">{{ button_label|default('Save') }}</button>
	<a href="{{ path('app_contact_index') }}" class="btn rounded-pill btn-outline-primary">back to list</a>
</div>

{{ form_end(form) }}
