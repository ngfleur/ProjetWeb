{% extends 'base.html.twig' %}
{% block title %}
	Cat√©gories
{% endblock %}
{% block title_btn %}
	<div class="demo-inline-spacing">
		<a href="{{ path('app_categorie_new') }}" class="btn rounded-pill btn-primary">Ajouter</a>
	</div>
{% endblock %}
{% block body %}
	<!-- Basic Bootstrap Table -->
	{% for key, value in app.flashes('success') %}
		<div class="alert alert-primary alert-dismissible ">
			{{ value }}
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	{% endfor %}
	<div class="card">
		<div class="table-responsive text-nowrap">
			<table class="table">
				<thead>
					<tr>
						<th>Id</th>
						<th>CodeRaccourci</th>
						<th>Nom</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody class="table-border-bottom-0">
					{% for categorie in categories %}
						<tr>
							<td>{{ categorie.id }}</td>
							<td>{{ categorie.codeRaccourci }}</td>
							<td>{{ categorie.nom }}</td>
							<td>
								<div class="dropdown">
									<button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
										<i class="bx bx-dots-vertical-rounded"></i>
									</button>
									<div class="dropdown-menu">
										<a class="dropdown-item" href="{{ path('app_categorie_show', {'id': categorie.id}) }}">
											<i class="bx bx-show-alt me-1"></i>
											Show</a>
										<a class="dropdown-item" href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">
											<i class="bx bx-edit-alt me-1"></i>
											Edit</a>
										<button class="dropdown-item" type="submit" form="app_categorie_delete_{{categorie.id}}">
											<i class="bx bx-trash me-1"></i>
											Delete</button>
										{{ include('categorie/_delete_form.html.twig') }}
									</div>
								</div>
							</td>

						</tr>
					{% else %}
						<tr>
							<td colspan="4">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
	<!--/ Basic Bootstrap Table -->
{% endblock %}
