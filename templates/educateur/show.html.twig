{% extends 'base.html.twig' %}

{% block title %}Educateur
{% endblock %}

{% block body %}

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ educateur.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ educateur.licencie.nom }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>
					{% if educateur.roles and 'ROLE_ADMIN' in educateur.roles %}
						Administrateur
					{% else %}
						Utilisateur
					{% endif %}
				</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ educateur.email }}</td>
			</tr>
		</tbody>
	</table>

	<div class="d-flex flex-row">
		<div class="demo-inline-spacing mt-4 mx-5 d-flex gap-5">
			<a href="{{ path('app_educateur_edit', {'id': educateur.id}) }}" class="btn rounded-pill btn-primary">edit</a>
			<a href="{{ path('app_educateur_index') }}" class="btn rounded-pill btn-outline-primary">back to list</a>
			<button class="btn rounded-pill btn-outline-primary" form="app_educateur_delete_{{educateur.id}}">Delete</button>
		</div>
	</div>

	{{ include('educateur/_delete_form.html.twig') }}
{% endblock %}
