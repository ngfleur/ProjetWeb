{% extends 'base.html.twig' %}
{% block title %}
	Educateurs
{% endblock %}
{% block title_btn %}
	<div class="demo-inline-spacing">
		<a href="{{ path('app_educateur_new') }}" class="btn rounded-pill btn-primary">Ajouter</a>
	</div>
{% endblock %}
{% block body %}
	<!-- Basic Bootstrap Table -->
	<div class="card">
		<h5 class="card-header">Table Basic</h5>
		<div class="table-responsive text-nowrap">
			<table class="table">
				<thead>
					<tr>
						<th>Id</th>
						<th>Email</th>
						<th>Roles</th>
						<th>actions</th>
					</tr>


				</thead>
				<tbody class="table-border-bottom-0">
					{% for educateur in educateurs %}
						<tr>
							<td>{{ educateur.id }}</td>
							<td>{{ educateur.email }}</td>
							<td>
								{% if educateur.roles and 'ROLE_ADMIN' in educateur.roles %}
									Administrateur
								{% else %}
									Utilisateur
								{% endif %}
							</td>
							<td>
								<div class="dropdown">
									<button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
										<i class="bx bx-dots-vertical-rounded"></i>
									</button>
									<div class="dropdown-menu">
										<a class="dropdown-item" href="{{ path('app_educateur_show', {'id': educateur.id}) }}">
											<i class="bx bx-show-alt me-1"></i>
											Show</a>
										<a class="dropdown-item" href="{{ path('app_educateur_edit', {'id': educateur.id}) }}">
											<i class="bx bx-edit-alt me-1"></i>
											Edit</a>
										<button class="dropdown-item" type="submit" form="app_educateur_delete_{{educateur.id}}">
											<i class="bx bx-trash me-1"></i>
											Delete</button>
										{{ include('educateur/_delete_form.html.twig') }}
									</div>
								</div>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
	<!--/ Basic Bootstrap Table -->
{% endblock %}
