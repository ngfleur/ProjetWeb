{% extends 'base.html.twig' %}

{% block title %}Licencie
{% endblock %}

{% block body %}

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ licencie.id }}</td>
			</tr>
			<tr>
				<th>NumLicence</th>
				<td>{{ licencie.numLicence }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ licencie.nom }}</td>
			</tr>
			<tr>
				<th>Prenom</th>
				<td>{{ licencie.prenom }}</td>
			</tr>
		</tbody>
	</table>

	<div class="d-flex flex-row">
		<div class="demo-inline-spacing mt-4 mx-5 d-flex gap-5">
			<a href="{{ path('app_licencie_edit', {'id': licencie.id}) }}" class="btn rounded-pill btn-primary">edit</a>
			<a href="{{ path('app_licencie_index') }}" class="btn rounded-pill btn-outline-primary">back to list</a>
			<button class="btn rounded-pill btn-outline-primary" form="app_licencie_delete_{{licencie.id}}">Delete</button>
		</div>
	</div>
	{{ include('licencie/_delete_form.html.twig') }}
{% endblock %}
