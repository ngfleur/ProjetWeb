{% extends 'base.html.twig' %}

{% block body %}
	<div class="user-profile-header d-flex flex-column flex-sm-row text-sm-start text-center mb-4">
		<div class="flex-shrink-0 mt-n2 mx-sm-0 mx-auto">
			<img src="/assets/img/avatars/male.png" alt="user image" width="180" height="180" class="d-block h-auto ms-0 ms-sm-4 rounded user-profile-img">
		</div>
		<div class="flex-grow-1 mt-3 mt-sm-5">
			<div class="d-flex align-items-md-end align-items-sm-start align-items-center justify-content-md-between justify-content-start mx-4 flex-md-row flex-column gap-4">
				<div class="user-profile-info">
					<h4>{{ app.user.licencie.nom ~ ' ' ~ app.user.licencie.prenom }}</h4>
					<ul class="list-inline mb-0 d-flex align-items-center flex-wrap justify-content-sm-start justify-content-center gap-2">
						<li class="list-inline-item fw-medium">
							<i class="bx bxl-react text-info me-2"></i>
							Admin
						</li>
						<li class="list-inline-item fw-medium">
							<i class="bx bxl-react text-info me-2"></i>
							Educateur
						</li>
						<li class="list-inline-item fw-medium">
							<i class="bx bxl-react text-info me-2"></i>
							licencié
						</li>
					</ul>
				</div>
				<a href="javascript:void(0)" class="btn btn-primary text-nowrap">
					<i class="bx bx-user-check me-1"></i>Connecté
				</a>
			</div>
		</div>
	</div>
	<div class="card mb-4">
		<div class="card-body">
			<small class="text-muted text-uppercase">A propos</small>
			<ul class="list-unstyled mb-4 mt-3">
				<li class="d-flex align-items-center mb-3">
					<i class="bx bx-user"></i>
					<span class="fw-medium mx-2">Noms</span>
					<span>{{ app.user.licencie.nom ~ ' ' ~ app.user.licencie.prenom }}</span>
				</li>
				<li class="d-flex align-items-center mb-3">
					<i class="bx bx-check"></i>
					<span class="fw-medium mx-2">Status:</span>
					<span>Educateur</span>
				</li>
				<li class="d-flex align-items-center mb-3">
					<i class="bx bx-star"></i>
					<span class="fw-medium mx-2">Role:</span>
					<span>Administrateur</span>
				</li>

			</ul>
			<small class="text-muted text-uppercase">Contacts</small>
			<ul class="list-unstyled mb-4 mt-3">
				<li class="d-flex align-items-center mb-3">
					<i class="bx bx-phone"></i>
					<span class="fw-medium mx-2">Contact:</span>

					<span>{{ app.user.licencie.contact.numTel}}</span>
				</li>
				<li class="d-flex align-items-center mb-3">
					<i class="bx bx-envelope"></i>
					<span class="fw-medium mx-2">Email:</span>
					<span>
						{{ app.user.userIdentifier}}
					</span>
				</li>
			</ul>
		</div>
	</div>
{% endblock %}
