						<th>Objet</th>
						<th>Message</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody class="table-border-bottom-0">
					{% for mail_edu in mail_edus %}
						<tr>
							<td>{{mail_edu.id}}</td>
							<td>{{mail_edu.dateEnvoi ? mail_edu.dateEnvoi|date('Y-m-d'):''}}</td>
