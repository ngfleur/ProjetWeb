{% extends 'base.html.twig' %}

{% block title %}MailContact
{% endblock %}

{% block body %}

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ mail_contact.id }}</td>
			</tr>
			<tr>
				<th>DateEnvoi</th>
				<td>{{ mail_contact.dateEnvoi ? mail_contact.dateEnvoi|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Objet</th>
				<td>{{ mail_contact.objet }}</td>
			</tr>
			<tr>
				<th>Message</th>
				<td>{{ mail_contact.message }}</td>
			</tr>
		</tbody>
	</table>

	<div class="d-flex flex-row">
		<div class="demo-inline-spacing mt-4 mx-5 d-flex gap-5">
			<a href="{{ path('app_mail_contact_edit', {'id': mail_contact.id}) }}" class="btn rounded-pill btn-primary">edit</a>
			<a href="{{ path('app_mail_contact_index') }}" class="btn rounded-pill btn-outline-primary">back to list</a>
			<button class="btn rounded-pill btn-outline-primary" form="app_mail_contact_delete_{{mail_contact.id}}">Delete</button>
		</div>
	</div>

	{{ include('mail_contact/_delete_form.html.twig') }}
{% endblock %}
