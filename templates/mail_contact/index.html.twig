{% extends 'base.html.twig' %}
{% block title %}
	Mail Contact
{% endblock %}
{% block title_btn %}
	<div class="demo-inline-spacing">
		<a href="{{ path('app_mail_contact_new') }}" class="btn rounded-pill btn-primary">Ajouter</a>
	</div>
{% endblock %}
{% block body %}
	<!-- Basic Bootstrap Table -->
	{% for key, value in app.flashes('success') %}
		<div class="alert alert-primary alert-dismissible ">
			{{ value }}
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	{% endfor %}
	<div class="card">
		<h5 class="card-header">Mails</h5>
		<div class="table-responsive text-nowrap">
			<table class="table">
				<thead>
					<tr>
						<th>Id</th>
						<th>DateEnvoi</th>
						<th>Objet</th>
						<th>Message</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody class="table-border-bottom-0">
					{% for mail_contact in mail_contacts %}
						<tr>
							<td>{{ mail_contact.id }}</td>
							<td>{{ mail_contact.dateEnvoi ? mail_contact.dateEnvoi|date('Y-m-d H:i:s') : '' }}</td>
							<td>{{ mail_contact.objet }}</td>
							<td>{{ mail_contact.message }}</td>
							<td>
								<div class="dropdown">
									<button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
										<i class="bx bx-dots-vertical-rounded"></i>
									</button>
									<div class="dropdown-menu">
										<a class="dropdown-item" href="{{ path('app_mail_contact_show', {'id': mail_contact.id}) }}">
											<i class="bx bx-show-alt me-1"></i>
											Show</a>
										<a class="dropdown-item" href="{{ path('app_mail_contact_edit', {'id': mail_contact.id}) }}">
											<i class="bx bx-edit-alt me-1"></i>
											Edit</a>
										<button class="dropdown-item" type="submit" form="app_mail_contact_delete_{{mail_contact.id}}">
											<i class="bx bx-trash me-1"></i>
											Delete</button>
										{{ include('mail_contact/_delete_form.html.twig') }}
									</div>
								</div>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
	<!--/ Basic Bootstrap Table -->
{% endblock %}
